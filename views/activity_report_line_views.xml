<odoo>
    
    <!-- ================================================= -->
    <!-- VUE LISTE : LIGNES D'ACTIVITÉ -->
    <!-- ================================================= -->
    <record id="view_activity_weekly_report_line_list" model="ir.ui.view">
        <field name="name">activity.weekly.report.line.list</field>
        <field name="model">activity.weekly.report.line</field>
        <field name="arch" type="xml">
            <list decoration-success="status == 'done'"
                  decoration-warning="status == 'in_progress'"
                  decoration-danger="status == 'blocked'"
                  decoration-muted="status == 'todo'">
                
                <field name="report_id"/>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="duration"/>
                <field name="status" 
                       widget="badge"
                       decoration-success="status == 'done'"
                       decoration-warning="status == 'in_progress'"
                       decoration-danger="status == 'blocked'"/>
                <field name="priority" widget="priority"/>
                
                <!-- % RÉALISATION : Syntaxe Odoo 18 -->
                <field name="progress" 
                       string="% Réalisation"
                       readonly="report_id.state not in ['draft','rejected']"/>

            </list>
        </field>
    </record>

    <!-- ================================================= -->
    <!-- VUE RECHERCHE : LIGNES D'ACTIVITÉ -->
    <!-- ================================================= -->
    <record id="view_activity_weekly_report_line_search" model="ir.ui.view">
        <field name="name">activity.weekly.report.line.search</field>
        <field name="model">activity.weekly.report.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="report_id"/>
                
                <!-- Filtres par statut -->
                <filter string="À faire" name="todo" domain="[('status','=','todo')]"/>
                <filter string="En cours" name="in_progress" domain="[('status','=','in_progress')]"/>
                <filter string="Terminé" name="done" domain="[('status','=','done')]"/>
                <filter string="Bloqué" name="blocked" domain="[('status','=','blocked')]"/>
                
                <separator/>
                
                <!-- Filtres par priorité -->
                <filter string="Priorité Critique" name="priority_critical" domain="[('priority','=','3')]"/>
                <filter string="Priorité Haute" name="priority_high" domain="[('priority','=','2')]"/>
                
                <separator/>
                
                <!-- Filtres par progression -->
                <filter string="Non démarré (0%)" name="not_started" domain="[('progress','=',0)]"/>
                <filter string="En cours (1-99%)" name="ongoing" domain="[('progress','&gt;',0),('progress','&lt;',100)]"/>
                <filter string="Terminé (100%)" name="completed" domain="[('progress','=',100)]"/>
                
                <!-- Groupements -->
                <group expand="0" string="Grouper par">
                    <filter string="Rapport" name="group_report" context="{'group_by':'report_id'}"/>
                    <filter string="Statut" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Priorité" name="group_priority" context="{'group_by':'priority'}"/>
                    <filter string="Date de début" name="group_date_start" context="{'group_by':'date_start'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ================================================= -->
    <!-- VUE FORMULAIRE : LIGNE D'ACTIVITÉ -->
    <!-- ================================================= -->
    <record id="view_activity_weekly_report_line_form" model="ir.ui.view">
        <field name="name">activity.weekly.report.line.form</field>
        <field name="model">activity.weekly.report.line</field>
        <field name="arch" type="xml">
            <form string="Activité">
                <sheet>
                    <group>
                        <group>
                            <field name="report_id" readonly="1"/>
                            <field name="name" placeholder="Description de l'activité"/>
                            <field name="status" required="1"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="duration" readonly="1"/>
                            <label for="progress" string="% Réalisation"/>
                            <div class="o_row">
                                <field name="progress" class="oe_inline"/> %
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================================================= -->
    <!-- ACTION : TOUTES LES ACTIVITÉS -->
    <!-- ================================================= -->
    <record id="action_activity_weekly_report_line" model="ir.actions.act_window">
        <field name="name">Activités</field>
        <field name="res_model">activity.weekly.report.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune activité trouvée
            </p>
            <p>
                Les activités sont créées dans les rapports d'activité hebdomadaires.
            </p>
        </field>
    </record>

</odoo>