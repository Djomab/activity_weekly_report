<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ============================= -->
    <!-- ACTION DASHBOARD -->
    <!-- ============================= -->
    <record id="action_activity_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard Activités</field>
        <field name="res_model">activity.weekly.report.line</field>
        <field name="view_mode">graph,pivot,list</field>
        <field name="context">{}</field>
    </record>

    <!-- ============================= -->
    <!-- VUE GRAPH -->
    <!-- ============================= -->
    <record id="view_activity_line_graph" model="ir.ui.view">
        <field name="name">activity.weekly.report.line.graph</field>
        <field name="model">activity.weekly.report.line</field>
        <field name="arch" type="xml">
            <graph string="Analyse des activités" type="bar">
                <field name="status" type="row"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ============================= -->
    <!-- VUE PIVOT -->
    <!-- ============================= -->
    <record id="view_activity_line_pivot" model="ir.ui.view">
        <field name="name">activity.weekly.report.line.pivot</field>
        <field name="model">activity.weekly.report.line</field>
        <field name="arch" type="xml">
            <pivot string="Analyse détaillée">
                <field name="department_id" type="row"/>
                <field name="status" type="col"/>
                <field name="progress" type="measure"/>
            </pivot>
        </field>
    </record>

</odoo>